#!/bin/bash

## Create links
ln -s ~/.dotfiles/vim ~/.vim
ln -s ~/.dotfiles/vim/vimrc ~/.vimrc
ln -s ~/.dotfiles/gitconfig ~/.gitconfig
ln -s ~/.dotfiles/screenrc ~/.screenrc
ln -s ~/.dotfiles/tmux.conf ~/.tmux.conf

##  Set bash rc
echo "" >> ~/.bashrc
echo "### I Love my prompt" >> ~/.bashrc
echo "source ~/.dotfiles/bashrc.d/git-completion.bash" >> ~/.bashrc
echo "source ~/.dotfiles/bashrc.d/prompt.bash" >> ~/.bashrc
echo "" >> ~/.bashrc
echo "### Vim as default editor" >> ~/.bashrc
echo "export EDITOR=vim" >> ~/.bashrc

## Clone VIM plugins
git clone https://github.com/tomtom/tcomment_vim.git ~/.dotfiles/vim/bundle/tcomment
git clone https://github.com/scrooloose/nerdtree.git ~/.dotfiles/vim/bundle/nerdtree
git clone https://github.com/sukima/xmledit.git ~/.dotfiles/vim/bundle/xmledit
git clone git://github.com/majutsushi/tagbar ~/.dotfiles/vim/bundle/tagbar
git clone git://github.com/tpope/vim-fugitive.git ~/.dotfiles/vim/bundle/vim-fugitive
git clone git://github.com/tpope/vim-surround.git ~/.dotfiles/vim/bundle/vim-surround
git clone git://github.com/nvie/vim-flake8.git  ~/.dotfiles/vim/bundle/vim-flake8
git clone https://github.com/bling/vim-airline.git ~/.dotfiles/vim/bundle/vim-airline
git clone https://github.com/puppetlabs/puppet-syntax-vim.git ~/.dotfiles/vim/bundle/puppet-syntax-vim
git clone https://github.com/jmcantrell/vim-virtualenv.git ~/.dotfiles/vim/bundle/vim-virtualenv

# Snipmate needs several clones
git clone https://github.com/tomtom/tlib_vim.git ~/.dotfiles/vim/bundle/tlib_vim
git clone https://github.com/MarcWeber/vim-addon-mw-utils.git ~/.dotfiles/vim/bundle/vim-addon-mw-utils
git clone https://github.com/garbas/vim-snipmate.git ~/.dotfiles/vim/bundle/vim-snipmate
git clone https://github.com/honza/vim-snippets.git ~/.dotfiles/vim/bundle/vim-snippets


source ~/.bashrc
